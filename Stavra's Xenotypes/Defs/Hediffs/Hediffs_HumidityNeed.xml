<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>StavrasXenotypes_Dehydration</defName>
        <label>dessication</label>
        <description>
            The result of an amphibious being spending too much time outside of water. Over time, drier conditions cause a low portion of body water, resulting in increasingly severe failure of biological processes, delirium, and possibly death.
        </description>
        <lethalSeverity>1</lethalSeverity>
        <scenarioCanAdd>false</scenarioCanAdd>
        <stages>
            <li>
                <label>Dehydrated</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.15</offset>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>Delirious</label>
                <minSeverity>0.3</minSeverity>
                <socialFightChanceFactor>5</socialFightChanceFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.35</offset>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>-0.15</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>Comatose</label>
                <minSeverity>0.6</minSeverity>
                <lifeThreatening>True</lifeThreatening>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>-0.25</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
</Defs>
